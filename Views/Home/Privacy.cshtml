@{
    ViewData["Title"] = "Home";
}

<!-- ===== Full Width Header ===== -->
<header class="bg-dark text-light py-3 border-bottom w-100">
    <div class="container-fluid d-flex justify-content-between align-items-center px-5">
        <!-- Left: Contact Info -->
        <div class="d-flex align-items-center gap-3">
            <i class="bi bi-phone fs-3 text-warning"></i>
            <div>
                <p class="mb-0 fw-bold">+27 65 123 4567</p>
                <small class="text-secondary">Mon - Sat : 8:00 am - 10:00 pm</small>
            </div>
        </div>

        <!-- Center: Logo -->
        <div class="text-center">
            <img src="~/images/wraps/Logo.png" alt="Wrap 'n Roll Logo" style="height:80px;" />
            <div class="mt-1">
                <small class="text-secondary">Wrap • Fresh • Tasty</small>
            </div>
        </div>

        <!-- Right: Cart Info -->
        <div class="d-flex align-items-center gap-3">
            <div class="text-end">
                <p class="mb-0 fw-bold text-warning">R0.00</p>
                <small class="text-secondary">0 items - View Cart</small>
            </div>
            <i class="bi bi-basket fs-3 text-warning"></i>
        </div>
    </div>
</header>

<!-- ===== Full Width Navbar ===== -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top border-top border-warning border-opacity-50">
    <div class="container-fluid justify-content-center px-5">
        <ul class="navbar-nav fw-semibold text-uppercase">
            <li class="nav-item mx-3"><a class="nav-link" href="#">Home</a></li>
            <li class="nav-item mx-3"><a class="nav-link" href="#">Menu</a></li>
            <li class="nav-item mx-3"><a class="nav-link" href="#">Features</a></li>
            <li class="nav-item mx-3"><a class="nav-link" href="#">About</a></li>
            <li class="nav-item mx-3"><a class="nav-link" href="#">Shop</a></li>
            <li class="nav-item mx-3"><a class="nav-link" href="#">Contact</a></li>
        </ul>
    </div>
</nav>

<!-- ===== Hero Section (Full Width Banner) ===== -->
<section class="position-relative">
    <img src="~/images/wraps/banner.jpg" class="img-fluid w-100" alt="Wraps Banner">
    <div class="position-absolute top-50 start-50 translate-middle text-center text-light bg-dark bg-opacity-50 p-4 rounded">
        <h1 class="display-4 fw-bold">Welcome to Wrap ’n Roll</h1>
        <p class="lead">Fresh wraps, full of flavor, made with love.</p>
        <a href="#" class="btn btn-warning btn-lg mt-3">Order Now</a>
    </div>
</section>

<!-- ===== Full Width Section: Best Sellers ===== -->
<section class="py-5 bg-light text-center w-100">
    <div class="container-fluid px-5">
        <h2 class="fw-bold mb-4">Our Best Sellers</h2>
        <p class="text-muted mb-5">Discover the wraps everyone is talking about.</p>

        <div class="row justify-content-center">
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm border-0">
                    <img src="~/images/wraps/classic.jpg" class="card-img-top" alt="Classic Wrap">
                    <div class="card-body">
                        <h5 class="card-title">Classic Chicken Wrap</h5>
                        <p class="card-text text-muted">Crisp veggies, juicy chicken, and creamy sauce.</p>
                        <a href="#" class="btn btn-warning">Order Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card shadow-sm border-0">
                    <img src="~/images/wraps/loaded.jpg" class="card-img-top" alt="Fully Loaded Wrap">
                    <div class="card-body">
                        <h5 class="card-title">Fully Loaded Wrap</h5>
                        <p class="card-text text-muted">Packed with fries, sauces, and all the flavor.</p>
                        <a href="#" class="btn btn-warning">Order Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card shadow-sm border-0">
                    <img src="~/images/wraps/veggie.jpg" class="card-img-top" alt="Veggie Wrap">
                    <div class="card-body">
                        <h5 class="card-title">Veggie Delight</h5>
                        <p class="card-text text-muted">A fresh, healthy option for wrap lovers.</p>
                        <a href="#" class="btn btn-warning">Order Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ===== Footer ===== -->
<footer class="bg-dark text-center text-light py-4 w-100">
    <p class="mb-0">© @DateTime.Now.Year Wrap ’n Roll. All rights reserved.</p>
</footer>
