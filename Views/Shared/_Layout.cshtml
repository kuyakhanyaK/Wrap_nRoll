@using Newtonsoft.Json
@using Wrap_nRoll.Models
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
@{
        var cartSession = HttpContextAccessor.HttpContext.Session.GetString("Cart");
        var cartItems = string.IsNullOrEmpty(cartSession)
                ? new List<CartItem>()
                : JsonConvert.DeserializeObject<List<CartItem>>(cartSession);

        var cartCount = cartItems?.Sum(c => c.Quantity) ?? 0;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wrap ’n Roll</title>

    <!-- ✅ Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/favicon1.png" />
</head>

<body>
    <!-- ===== Header ===== -->
    <header class="bg-dark text-light border-bottom w-100">
        <div class="container-fluid d-flex justify-content-between align-items-center px-4 px-md-5 py-2">
            <!-- Left -->
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-phone fs-3 text-warning"></i>
                <div>
                    <p class="mb-0 fw-bold">+27 62 961 4703</p>
                    <small class="text-secondary">Mon - Sat: 10:00 am - 7:00 pm</small>
                </div>
            </div>

            <!-- Center (Logo) -->
            <div class="text-center">
                <img src="~/images/image-removebg-preview.png" alt="Wrap 'n Roll Logo" style="height:110px;" />
                <div class="mt-1">
                    <small class="text-secondary">Wrap • Fresh • Tasty</small>
                </div>
            </div>

            <!-- Right (Cart + Auth Buttons) -->
            <div class="d-flex align-items-center gap-3">
                <!-- 🛒 Cart -->
                <a asp-controller="Cart" asp-action="Index" class="text-warning position-relative text-decoration-none">
                    <i class="bi bi-basket fs-3"></i>
                    <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @cartCount
                    </span>
                </a>

                <!-- 🔐 Auth -->
                @if (User.Identity.IsAuthenticated)
                {
                    <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                        <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-sm">Login</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-warning btn-sm text-dark">Join the Family</a>
                }
            </div>
        </div>
    </header>

    <!-- ===== Navbar ===== -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top border-top border-warning border-opacity-50">
        <div class="container-fluid justify-content-center px-4 px-md-5">
            <ul class="navbar-nav fw-semibold text-uppercase">
                <li class="nav-item mx-2"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mx-2"><a class="nav-link" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                }
                @if (User.IsInRole("Employee"))
                {
                    <li class="nav-item mx-2"><a class="nav-link" asp-controller="EmployeeOrders" asp-action="Index">Orders</a></li>
                }
                @if (User.IsInRole("Customer"))
                {
                    <li class="nav-item mx-2"><a class="nav-link" asp-controller="Store" asp-action="Index">Store</a></li>
                    <li class="nav-item mx-2"><a class="nav-link" asp-controller="CustomerOrders" asp-action="Index">My Orders</a></li>
                }
                <li class="nav-item mx-2"><a class="nav-link" asp-controller="Home" asp-action="About">About Us</a></li>
                <li class="nav-item mx-2"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a></li>
            </ul>
        </div>
    </nav>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- ===== Footer ===== -->
    <footer class="bg-dark text-white mt-5 pt-4 pb-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <h5>Contact Us</h5>
                    <p><strong>Address:</strong> 123 Wrap Street, Gqeberha, South Africa</p>
                    <p><strong>Email:</strong> <a href="mailto:kuyakhanyak@gmail.com" class="text-white">kuyakhanyak@gmail.com</a></p>
                    <p><strong>Phone:</strong> +27 62 961 4703</p>
                </div>
                <div class="col-md-6 mb-3">
                    <h5>Follow Us</h5>
                    <a href="https://www.instagram.com/wrap_nroll4/" target="_blank" class="text-white me-3"><i class="bi bi-instagram fs-4"></i></a>
                    <a href="https://wa.me/27629614703" target="_blank" class="text-white"><i class="bi bi-whatsapp fs-4"></i></a>
                </div>
            </div>
            <hr class="bg-light">
            <p class="text-center mb-0">&copy; 2025 Wrap ’n Roll. All rights reserved.</p>
        </div>
    </footer>

    <!-- ===== Scripts ===== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
