@model Wrap_nRoll.Models.ViewModel.WrapVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm bg-dark text-light">
                <div class="card-body">
                    <h3 class="card-title mb-3 text-center">Edit Wrap</h3>
                    <p class="text-center text-muted mb-4">Update the wrap details below</p>

                    <form asp-action="EditWrap" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="WrapId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <!-- Updated Image Preview -->
                        <div class="mb-3">
                            <label>Current Image</label>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="card mb-3">
                                    <img src="@Model.ImageUrl" alt="Wrap Image" class="card-img-top img-fluid" style="object-fit:cover; max-height:250px; width:100%;">
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No image uploaded yet.</p>
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label"></label>
                            <input asp-for="ImageFile" type="file" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsAvailable" class="form-check-input" />
                            <label asp-for="IsAvailable" class="form-check-label"></label>
                        </div>

                        <button type="submit" class="btn btn-warning w-100 text-dark">Save Changes</button>
                        <a asp-action="Index" class="btn btn-light w-100 mt-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
