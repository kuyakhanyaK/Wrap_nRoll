@model List<Wrap_nRoll.Models.CartItem>

@{
    ViewData["Title"] = "Your Cart";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🛒 Your Cart</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }

    @if (!Model.Any())
    {
        <div class="text-center">
            <p>Your cart is empty.</p>
            <a asp-controller="Store" asp-action="Index" class="btn btn-primary">⬅️ Back to Shopping</a>
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Wrap</th>
                    <th>Customizations</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@item.ImageUrl" alt="@item.Name" style="width:80px; height:80px; object-fit:cover; border-radius:10px; margin-right:10px;" />
                                <strong>@item.Name</strong>
                            </div>
                        </td>

                        <!-- ✅ Customization form -->
                        <td>
                            <form asp-action="UpdateCustomizations" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="wrapId" value="@item.WrapId" />

                                <div id="fillings-@item.WrapId" class="mb-2" style="display:none;">
                                    @{
                                        var allFillings = new List<string> {
                                                        "Lettuce", "Tomato", "Cucumber", "Fries", "Sweet Heat Sauce", "Creamy Chilli Sauce"
                                                        };
                                    }

                                    @foreach (var filling in allFillings)
                                    {
                                        bool isChecked = item.Ingredients != null && item.Ingredients.Contains(filling);
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="selectedIngredients" value="@filling" @(isChecked ? "checked" : "") />
                                            <label class="form-check-label">@filling</label>
                                        </div>
                                    }

                                    <button type="submit" class="btn btn-sm btn-success mt-2">Save Fillings</button>
                                </div>

                                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleFillings(@item.WrapId)">
                                    Customize Fillings
                                </button>
                                <div class="mt-2 small text-muted">
                                    <strong>Selected:</strong> @item.Customizations
                                </div>
                            </form>
                        </td>

                        <!-- ✅ Quantity form -->
                        <td class="text-center">
                            <form asp-action="UpdateQuantity" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="wrapId" value="@item.WrapId" />
                                <input type="number" name="quantity" value="@item.Quantity" min="1" max="20"
                                       class="form-control form-control-sm text-center"
                                       style="width:60px; display:inline-block;"
                                       onchange="this.form.submit()" />
                            </form>
                        </td>

                        <td class="text-center">R @item.Price</td>
                        <td class="text-center">R @(item.Price* item.Quantity)</td>

                        <!-- ✅ Remove form -->
                        <td class="text-center">
                            <form asp-action="RemoveFromCart" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="wrapId" value="@item.WrapId" />
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <a asp-controller="Store" asp-action="Index" class="btn btn-secondary">⬅️ Back to Shopping</a>
            <div class="text-end">
                <h5>Total: R @Model.Sum(i => i.Price * i.Quantity)</h5>
                <a asp-controller="Checkout" asp-action="Index" class="btn btn-success">Proceed to Checkout</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleFillings(wrapId) {
            const div = document.getElementById(`fillings-${wrapId}`);
            div.style.display = div.style.display === "none" ? "block" : "none";
        }
    </script>
}
