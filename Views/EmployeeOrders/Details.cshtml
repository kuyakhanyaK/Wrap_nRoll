@model Wrap_nRoll.Models.Order

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-3 text-center">Order Details</h3>
                    <p class="text-center text-muted mb-4">Order #@Model.OrderId</p>

                    <div class="mb-4">
                        <p><strong>Customer:</strong> @Model.Customer.Name</p>
                        <p><strong>Address:</strong> @(Model.Customer.Address ?? "Not provided")</p>
                        <p>
                            <strong>Status:</strong>
                            @switch (Model.Status)
                            {
                                case "Pending":
                                    <span class="badge bg-secondary">@Model.Status</span>
                                    break;
                                case "Preparing":
                                    <span class="badge bg-warning">@Model.Status</span>
                                    break;
                                case "Ready":
                                    <span class="badge bg-info">@Model.Status</span>
                                    break;
                                case "On the way":
                                    <span class="badge bg-primary">@Model.Status</span>
                                    break;
                                case "Completed":
                                    <span class="badge bg-success">@Model.Status</span>
                                    break;
                                case "Cancelled":
                                    <span class="badge bg-danger">@Model.Status</span>
                                    break;
                                default:
                                    <span class="badge bg-dark">@Model.Status</span>
                                    break;
                            }
                        </p>
                        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("g")</p>
                    </div>

                    <h5 class="mb-3">Items</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Wrap</th>
                                    <th>Fillings / Customizations</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.Wrap.Name</td>
                                        <td>
                                            @(string.IsNullOrEmpty(item.Customizations)
                                                                                    ? "Default fillings"
                                                                                    : item.Customizations)
                                    </td>
                                    <td>@item.Quantity</td>
                                    <td>R @item.UnitPrice.ToString("F2")</td>
                                    <td>R @(item.Quantity* item.UnitPrice)</td>
                                </tr>
                                                                }
                            </tbody>
                        </table>
                    </div>


                    <p class="fw-bold mt-3 text-end">Total Amount: R @Model.TotalAmount</p>

                    <a asp-action="Index" class="btn btn-secondary w-100 mt-3">Back to Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>
